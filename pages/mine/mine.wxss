/* pages/mine/mine.wxss */
.mine{
  width: 100%;
}
.mine .content{
  width: 100%;
}
.mine .content .portrait{
  padding: 0 52rpx 40rpx;
  box-sizing: border-box;
  background: #1ca95e;
}
.mine .content .portrait .ctrl{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 64rpx;
  font-size: 64rpx;
  color: #fff;
}
.mine .content .portrait .img{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mine .content .portrait .img image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-size: cover;
}
.mine .content .portrait .img .name{
  color: #fff;
  padding-top: 12rpx;
}
.mine .content .indent .indent_all{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 30rpx 52rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ccc;
}
.mine .content .indent .indent_all .left icon{
  color: #5aa0ff;
  font-size: 40rpx;
}
.mine .content .indent .indent_all .left text{
  font-size: 36rpx;
  margin-left: 20rpx;
}
.mine .content .indent .indent_all .right{
  font-size: 24rpx;
  color: #ababab;
}
.mine .content .indent .indent_all .right icon{
  font-size: 30rpx;
  padding-left: 16rpx;
}
.mine .content .indent .menu{
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ccc;
}
.mine .content .indent .menu .menuCon{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 156rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.mine .content .indent .menu .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #919191;
}
.mine .content .indent .menu .item icon{
  font-size: 40rpx;
}
.mine .content .indent .list .list_item{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 72rpx;
  padding: 0 52rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ccc;
}
.mine .content .indent .list .list_item view{
  display: flex;
  align-items: center;
}
.mine .content .indent .list .list_item view icon{
  font-size: 40rpx;
  height:78rpx;
}
.mine .content .indent .list .list_item view icon.icon-youhuiquan1{
  color: #ec3127;
}
.mine .content .indent .list .list_item view icon.icon-shangpinshoucang{
  color: #ff81ba;
}
.mine .content .indent .list .list_item view icon.icon-lishiliulan{
  color: #1dd9b8;
}
.mine .content .indent .list .list_item view icon.icon-tuikuan{
  color: #5aa0ff;
}
.mine .content .indent .list .list_item view text{
  font-size: 30rpx;
  color: #747474;
  padding-left: 30rpx;
}