/* 订单 */
.order{
  width: 20rem;
  height: 100vh;
  background: #f5f5f5;
  overflow: hidden;
}
/* 收货地址 */
.order-header{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 30rpx;
  background: #fff;
  margin-top: 2rpx;
}
.order-header .location {
  position: relative;
  top: 6rpx;
  left: 0;
  margin-left: 39rpx;
  margin-right: 38rpx;
  font-size: 40rpx;
}
.order-header .arrow{
  float: right;
  opacity: .5;
  margin-right: 28rpx;
}
/* 彩条 */
.Colorbar {
  background: #fff;
  height: 4rpx;
  min-height: 4rpx;
}
.Colorbar image {
  display: block;
}
/* 商品详情 */
.order-content {
  width: 100%;
}
/* 商品 */
.order-item {
  display: flex;
  padding: 53rpx 26rpx;
  background: #fff;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}
/* 商品图片 */
.order-item image {
  width:180rpx;
  height:180rpx;
  margin-right: 12rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.order-item .order-item-content {
  flex: 1;
}
.order-item .order-item-content text {
  display: block;
}
/* 商品名称 */
.order-item .order-item-content .goods_name {
  width: 400rpx;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
}
/* 商品颜色 */
.order-item .order-item-content .short_name{
  width: 400rpx;
  margin-bottom: 94rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}
/* 多少件 */
.order-item .order-item-content .count{
  display: flex;
  float: right;
  margin-right: 25rpx;
}
.Piece {
  font-size: 26rpx;
  color: #999;
  margin-right: 25rpx;
}
.unitPrice {
  font-size: 26rpx;
  color: #333;
}
/* 优惠劵 */
.Coupon {
  width: 100%;
  height: 73rpx;
  line-height: 73rpx;
  background: #fff;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.Coupon-text {
  display: flex;
  justify-content: space-between;
}
.Coupon-text .left {
  margin-left: 23rpx;
  color:#333;
}
.Coupon-text .right { 
  margin-right: 23rpx;
  color:#999;
}
.Coupon-text .right .arrow {
  margin-left: 21rpx;
}
/* 商品总额 */
.price-box {
  width: 100%;
  background: #fff;
  margin-bottom: 10rpx;
}
.price,.Freight{
  display: flex;
  justify-content: space-between;
  height: 30rpx;
  font-size: 26rpx;
  padding: 24rpx 0;
}
.text{
  margin-left: 23rpx;
}
.TotalCost{
  margin-right: 23rpx;
}
.FreightPrice{
  margin-right: 23rpx; 
}
/* 留言 */
.leaveComments {
  width: 100%;
  background: #fff;
  font-size: 26rpx;
  padding: 24rpx 0;
  margin-bottom: 10rpx;
}
.content {
  margin-left: 62rpx;
  color: #999;
}
/* 微信支付 */
.Pay{
  width: 100%;
  background: #fff;
}
.wx,.wxFriend{
  display: flex;
  justify-content: space-between;
  height: 30rpx;
  font-size: 26rpx;
  padding: 24rpx 0;
}
.left .iconfont{
  margin-left: 23rpx;
  margin-right: 24rpx;
  color: #248756;
}
.right .iconfont {
  margin-right: 23rpx;
  color: #e01616;
}
/* 购物车 */
.shopping {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 117rpx;
  line-height: 117rpx;
  background: #fff;
  box-shadow: 1rpx 2rpx 2rpx 1rpx #ddd;
  z-index: 100;
}
.shoppingBottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}
.left {
  margin-left: 23rpx;
}
.left .TotalCost{
  font-size: 28rpx;
}
.left .red{
  color: #e01616;
}
.right .Settlement {
  width: 150rpx;
  height: 70rpx; 
  line-height: 70rpx;
  padding: 0;
  border-radius: 5rpx;
  background: #e01616;
  font-size: 30rpx;
  color: #fff;
}
/* 模态框 */
.van-popup {
  width: 702rpx;
  height: 500rpx;
  border-radius: 10rpx;
}