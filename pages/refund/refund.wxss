/* pages/refund/refund.wxss */
.refund{
  width: 100vw;
  height: 100vh;
  padding: 20rpx 24rpx 0;
  box-sizing: border-box;
  background: #f4f4f4;
  overflow: hidden;
}
.refund .content .list{
  height: 442rpx;
  border-radius: 20rpx;
  background: #fff;
}
.refund .content .list .top{
  display: flex;
  justify-content: flex-start;
  align-items: center; 
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.refund .content .list .top image{
  width: 38rpx;
  height: 38rpx;
}
.refund .content .list .top text{
  font-size: 26rpx;
  line-height: 32rpx;
  margin-left: 20rpx; 
}
.refund .content .list .top icon{
  font-size: 40rpx;
  line-height: 60rpx;
}
.refund .content .list .center{
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.refund .content .list .center image{
  width: 181rpx;
  height: 181rpx;
  margin-right: 20rpx;
  margin-bottom: 42rpx;
}
.refund .content .list .center .txt{
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  height: 140rpx;
}
.refund .content .list .center .txt .title{
  width: 85%;
  height: 80rpx;
  font-size: 26rpx;
  line-height: 42rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis; 
}
.refund .content .list .center .txt .num{
  position: absolute;
  top: 80rpx;
  right:0rpx;
  color: #999;
  font-size: 24rpx;
}
.refund .content .list .center .txt .total{
  font-size: 20rpx;
  color: #333;
  box-sizing: border-box;
}
.refund .content .list .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center; 
  width: 100%;
  height: 23rpx;
  padding: 0 20rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ddd;
}
.refund .content .list .bottom .success icon{
  font-size: 40rpx;
  color: #da2015;
}
.refund .content .list .bottom .success text{
  color: #9c9a9a;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: left;
  margin-left: 20rpx;
}
.refund .content .list .bottom .price{
  font-size: 20rpx;
  color: #333;
  line-height: 30rpx;
}
.refund .content .list .bottom .price text{
  font-size: 26rpx;
}
.refund .content .list .button{
  display: flex;
  justify-content: flex-end;
  align-content: center;
  padding: 20rpx 20rpx 0 0;
  box-sizing: border-box;
}
.refund .content .list .button text{
  color: #da2015;
  font-size: 26rpx;
  border: 2rpx solid #da2015;
  border-radius: 40rpx;
  padding: 13rpx 19rpx;
  box-sizing: border-box; 
}
.footer{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  padding: 150rpx 0;
  box-sizing: border-box;
}
.footer text{
  color: #bacdc3;
  font-size: 22rpx;
  line-height: 42rpx;
}
.footer image{
  width: 107rpx;
  height: 64rpx;
  opacity: 0.3;
	background: #397755;
}